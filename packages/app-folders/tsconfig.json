{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "references": [
    { "path": "../app" },
    { "path": "../app-admin" },
    { "path": "../app-validation" },
    { "path": "../plugins" }
  ],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/app/*": ["../app/src/*"],
      "@webiny/app": ["../app/src"],
      "@webiny/app-admin/*": ["../app-admin/src/*"],
      "@webiny/app-admin": ["../app-admin/src"],
      "@webiny/app-validation/*": ["../app-validation/src/*"],
      "@webiny/app-validation": ["../app-validation/src"]
    },
    "baseUrl": "."
  }
}
